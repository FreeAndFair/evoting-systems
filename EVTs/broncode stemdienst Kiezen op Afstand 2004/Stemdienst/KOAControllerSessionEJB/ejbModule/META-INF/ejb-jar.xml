<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 1.1//EN" "http://java.sun.com/j2ee/dtds/ejb-jar_1_1.dtd">
<ejb-jar id="ejb-jar_ID">
	<display-name>KOAControllerSessionEJB</display-name>
	<enterprise-beans>
		<session id="Controller">
			<ejb-name>Controller</ejb-name>
			<home>com.logicacmg.koa.controller.beans.ControllerHome</home>
			<remote>com.logicacmg.koa.controller.beans.Controller</remote>
			<ejb-class>com.logicacmg.koa.controller.beans.ControllerBean</ejb-class>
			<session-type>Stateless</session-type>
			<transaction-type>Container</transaction-type>
		</session>
	</enterprise-beans>
	<assembly-descriptor>
		<security-role>
			<role-name>voorzitter</role-name>
		</security-role>
		<method-permission>
			<role-name>voorzitter</role-name>
			<method>
				<ejb-name>Controller</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>countVote</method-name>
			</method>
			<method>
				<ejb-name>Controller</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>initialize</method-name>
				<method-params>
					<method-param>java.security.PublicKey</method-param></method-params>
			</method>
			<method>
				<ejb-name>Controller</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>reInitialize</method-name>
				<method-params>
					<method-param>java.security.PublicKey</method-param></method-params>
			</method>
			<method>
				<ejb-name>Controller</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>open</method-name>
			</method>
			<method>
				<ejb-name>Controller</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>suspend</method-name>
			</method>
			<method>
				<ejb-name>Controller</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>close</method-name>
			</method>
			<method>
				<ejb-name>Controller</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>prepareVoteCount</method-name>
				<method-params>
					<method-param>byte[],java.lang.String</method-param></method-params>
			</method>
			<method>
				<ejb-name>Controller</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>prepare</method-name>
			</method>
		</method-permission>
		<container-transaction>
			<method>
				<ejb-name>Controller</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>block</method-name>
			</method>
			<trans-attribute>RequiresNew</trans-attribute>
		</container-transaction>
		<container-transaction>
			<method>
				<ejb-name>Controller</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>close</method-name>
			</method>
			<trans-attribute>RequiresNew</trans-attribute>
		</container-transaction>
		<container-transaction>
			<method>
				<ejb-name>Controller</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>suspend</method-name>
			</method>
			<trans-attribute>RequiresNew</trans-attribute>
		</container-transaction>
	</assembly-descriptor>
</ejb-jar>
